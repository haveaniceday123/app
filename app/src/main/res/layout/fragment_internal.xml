                                                              app:rippleItemBg="@drawable/hotel19"
                                                              app:rippleItemText="펜션특가"
                                                              android:layout_weight="1"
                                                              android:layout_marginEnd="5dp"
                                                              android:layout_height="wrap_content"/>

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel20"
                                                              android:layout_weight="1"
                                                              app:rippleItemText="얼리버드쿠폰"
                                                              android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:background="@color/white"

            >

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel21"
                                                              app:rippleItemText="지역여행혜택"
                                                              android:layout_marginEnd="5dp"
                                                              android:layout_weight="1"
                                                              android:layout_height="wrap_content"/>

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel22"
                                                              app:rippleItemText="부산"
                                                              android:layout_weight="1"
                                                              android:layout_marginEnd="5dp"
