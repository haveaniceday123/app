            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@color/white"
            >

                <LinearLayout
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:padding="1dp"
                        android:background="@drawable/ripple_border2"
                        android:layout_marginBottom="15dp"

                >

                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                                  android:background="@drawable/ripple_border"
                                  android:gravity="center"
                                  android:orientation="vertical"
                                  android:layout_marginRight="0.9dp"
                                  android:paddingTop="5dp"
                                  android:paddingBottom="5dp"
                                  android:clickable="true"
                                  android:focusable="true"
                    >

                        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                                   android:src="@drawable/coupons1"
                                   android:contentDescription="@string/todo"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="선착순쿠폰"
                                  android:layout_marginTop="2dp"
                                  android:textSize="10sp"
                                  android:textStyle="bold"
                                  android:textColor="@color/black"

                        />

                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                                  android:background="@drawable/ripple_border3"
                                  android:gravity="center"
                                  android:orientation="vertical"
                                  android:layout_marginRight="0.9dp"
                                  android:paddingTop="5dp"
                                  android:paddingBottom="5dp"
                                  android:clickable="true"
                                  android:focusable="true"
                    >

                        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                                   android:src="@drawable/coupons2"
                                   android:contentDescription="@string/todo"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="무한쿠폰룸"
                                  android:layout_marginTop="2dp"
                                  android:textSize="10sp"
                                  android:textStyle="bold"
                                  android:textColor="@color/black"

                        />

                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                                  android:background="@drawable/ripple_border"
                                  android:gravity="center"
                                  android:orientation="vertical"
                                  android:layout_marginRight="0.9dp"
                                  android:paddingTop="5dp"
                                  android:paddingBottom="5dp"
                                  android:clickable="true"
                                  android:focusable="true"
                    >

                        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                                   android:src="@drawable/coupons3"
                                   android:contentDescription="@string/todo"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="지금쿠폰받기"
                                  android:layout_marginTop="2dp"
                                  android:textSize="10sp"
                                  android:textStyle="bold"
                                  android:textColor="@color/black"

                        />

                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                                  android:background="@drawable/ripple_border3"
                                  android:gravity="center"
                                  android:orientation="vertical"
                                  android:paddingTop="5dp"
                                  android:paddingBottom="5dp"
                                  android:clickable="true"
                                  android:focusable="true"
                    >

                        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                                   android:src="@drawable/coupons4"
                                   android:contentDescription="@string/todo"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="10월의혜택"
                                  android:layout_marginTop="2dp"
                                  android:textSize="10sp"
                                  android:textStyle="bold"
                                  android:textColor="@color/black"

                        />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>



            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                          android:background="@color/white"

            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="25dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="20dp"
                        android:gravity="center_vertical"
                >

                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:orientation="vertical"
                    >
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                                  android:text="당신의 취향저격 BEST"
                                  android:textSize="14sp"
                                  android:textColor="@color/black"
                                  android:textStyle="bold"
                        />

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textSize="10sp"
                                  android:text="관심 상품 인근 인기숙소 추천" />

                    </LinearLayout>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="12sp"
                              android:text="전체보기"
                              android:textColor="@color/material_dynamic_primary50"
                              android:textStyle="bold" />

                </LinearLayout>



            </LinearLayout>

            <include layout="@layout/ranking_view" />


            <include layout="@layout/footer"/>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>