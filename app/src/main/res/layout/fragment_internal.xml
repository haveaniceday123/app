<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#efefef"
              android:id="@+id/fragment_internal_container"
              android:layout_height="match_parent"
              tools:context=".main.fragment.InternalFragment">

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
        >

            <include layout="@layout/layout_banner"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
            >

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/motel"
                                                              app:rippleItemText="모텔"
                                                              android:layout_marginEnd="5dp"
                                                              android:layout_weight="1"
                                                              android:layout_height="wrap_content"/>

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel"
                                                              app:rippleItemText="호텔"
                                                              android:layout_weight="1"
                                                              android:layout_marginEnd="5dp"
                                                              android:layout_height="wrap_content"/>

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel12"
                                                              app:rippleItemText="프리미엄호텔"
                                                              android:layout_weight="1"
                                                              android:layout_marginEnd="5dp"
                                                              android:layout_height="wrap_content"/>

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel13"
                                                              app:rippleItemText="펜션/풀빌라"
                                                              android:layout_weight="1"
                                                              android:layout_marginEnd="5dp"
                                                              android:layout_height="wrap_content"/>

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel14"
                                                              android:layout_weight="1"
                                                              app:rippleItemText="프리미엄펜션"
                                                              android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:background="@color/white"

            >

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel15"
                                                              app:rippleItemText="리조트"
                                                              android:layout_marginEnd="5dp"
                                                              android:layout_weight="1"
                                                              android:layout_height="wrap_content"/>

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel16"
                                                              app:rippleItemText="글램핌/캠핑"
                                                              android:layout_weight="1"
                                                              android:layout_marginEnd="5dp"
                                                              android:layout_height="wrap_content"/>

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel17"
                                                              app:rippleItemText="게하/한옥"
                                                              android:layout_weight="1"
                                                              android:layout_marginEnd="5dp"
                                                              android:layout_height="wrap_content"/>

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel18"
                                                              app:rippleItemText="호캉스패키지"
                                                              android:layout_weight="1"
                                                              android:layout_marginEnd="5dp"
                                                              android:layout_height="wrap_content"/>

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel19"
                                                              android:layout_weight="1"
                                                              app:rippleItemText="호텔특가"
                                                              android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
            >

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel16"
                                                              app:rippleItemText="부티크브랜두"
                                                              android:layout_marginEnd="5dp"
                                                              android:layout_weight="1"
                                                              android:layout_height="wrap_content"/>

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel17"
                                                              app:rippleItemText="야놀자케어"
                                                              android:layout_weight="1"
                                                              android:layout_marginEnd="5dp"
                                                              android:layout_height="wrap_content"/>

                <org.android.wanolza.main.view.RippleItemView android:layout_width="0dp"
                                                              app:rippleItemBg="@drawable/hotel18"
                                                              app:rippleItemText="대실할인"
                                                              android:layout_weight="1"
                                                              android:layout_marginEnd="5dp"
