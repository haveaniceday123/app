<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:id="@+id/main_container"
                  android:layout_weight="1"
                  android:clickable="true"
                  android:focusable="true"
                  android:orientation="vertical"
    />


    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="@drawable/bottom_navi_shadow" />

    <com.google.android.material.bottomnavigation.BottomNavigationView android:layout_width="match_parent"
                                                                       android:layout_height="wrap_content"
                                                                       android:clipToPadding="false"
                                                                       android:elevation="40dp"
                                                                       android:layout_gravity="bottom"
                                                                       android:background="@color/white"
                                                                       app:itemHorizontalTranslationEnabled="false"
                                                                       app:itemIconTint="@drawable/menu_item_color"
                                                                       app:itemTextColor="@drawable/menu_item_color"
                                                                       app:labelVisibilityMode="labeled"
                                                                       android:id="@+id/bottom_navigation_view"
                                                                       app:menu="@menu/bottom_menu"/>


</LinearLayout>