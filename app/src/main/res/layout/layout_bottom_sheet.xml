<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/bottomSheetContainer"
              android:layout_width="match_parent"
              android:paddingLeft="22dp"
              android:paddingRight="22dp"
              android:background="@drawable/bottom_sheet_background"
              android:paddingTop="13dp"
              android:layout_height="wrap_content" android:orientation="vertical">

    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:paddingLeft="0dp"
                 android:paddingTop="5dp"
                 android:paddingBottom="5dp"
                 android:layout_marginBottom="15dp"

    >
        <ImageView android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_baseline_close_24"
                   android:id="@+id/closeButton"
                   android:layout_gravity="center_vertical|left"
                   android:padding="10dp"
                   android:background="@drawable/ripple_no_border"
                   android:clickable="true"
                   android:focusable="true"
        />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center|center_vertical"
                  android:gravity="center"
                  android:textSize="18sp"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:text="@string/Agree" />

    </FrameLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="left|center_vertical"
                  android:paddingTop="8dp"
                  android:paddingBottom="8dp"
                  android:clickable="true"
                  android:focusable="true"
                  android:id="@+id/allSelectButton"
                  android:layout_marginBottom="15dp"
                  android:background="@drawable/login_button"
                  android:paddingLeft="5dp"
    >

        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:clickable="false"
                  android:id="@+id/allSelectCheckbox"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:text="전체 동의"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="(선택 포함)"
                  android:layout_marginStart="5dp"
                  android:textSize="12sp"/>

    </LinearLayout>
    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:paddingLeft="20dp"
                                                  android:gravity="center_vertical"

    >

        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:padding="10dp"
                   android:src="@drawable/ic_baseline_check_24"
                   android:id="@+id/check1"
                   android:layout_marginRight="16dp"

        />

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textSize="13sp"
                  android:layout_marginEnd="15dp"
                  android:id="@+id/must_agree_text"
                  android:text="만 14세 이상 이용, 서비스 이용약관, 개인정보 수집 및 이용 동의 (필수)"/>

        <ImageView android:layout_width="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:id="@+id/plust"
                   android:layout_height="20dp" android:src="@drawable/ic_baseline_arrow_drop_up_24"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingLeft="60dp"
                  android:orientation="vertical"
                  android:layout_marginTop="10dp"
                  android:visibility="gone"
                  android:id="@+id/visible_linear"
    >

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="center"

        >
            <ImageView android:layout_width="40dp" android:layout_height="40dp"
                       android:padding="13dp"
                       android:id="@+id/miniCheck1"
                       android:src="@drawable/ic_baseline_check_24"
                       android:layout_marginRight="16dp"

            />

            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="13sp"
                      android:layout_marginEnd="15dp"
                      android:text="만 14세 이상 사용 동의"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:gravity="center"
        >
            <ImageView android:layout_width="40dp" android:layout_height="40dp"
                       android:padding="13dp"
                       android:src="@drawable/ic_baseline_check_24"
                       android:layout_marginRight="16dp"
                       android:id="@+id/miniCheck2"

            />

            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="13sp"
                      android:layout_marginEnd="15dp"
                      android:text="서비스 이용약관 동의"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:gravity="center"
        >
            <ImageView android:layout_width="40dp" android:layout_height="40dp"
                       android:padding="13dp"
                       android:src="@drawable/ic_baseline_check_24"
                       android:layout_marginRight="16dp"
                       android:id="@+id/miniCheck3"

            />

            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="13sp"
                      android:layout_marginEnd="15dp"
                      android:text="개인정보 수집 및 이용 동의"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:paddingLeft="20dp"
                                                  android:layout_marginTop="5dp"
                                                  android:gravity="center_vertical"
    >

        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:src="@drawable/ic_baseline_check_24"
                   android:id="@+id/check2"
                   android:layout_marginRight="16dp"
                   android:padding="10dp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textSize="13sp"
                  android:layout_marginEnd="15dp"
                  android:text="개인정보 수집 및 이용 동의 (선택)"/>




    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:paddingLeft="20dp"
                                                  android:layout_marginTop="5dp"
                                                  android:gravity="center_vertical"
    >

        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:padding="10dp"
                   android:src="@drawable/ic_baseline_check_24"
                   android:id="@+id/check3"
                   android:layout_marginRight="16dp"

        />

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textSize="13sp"
                  android:layout_marginEnd="15dp"
                  android:text="프로모션 정보 수신 동의 (선택)"/>




    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:paddingLeft="20dp"
                                                  android:layout_marginTop="5dp"
                                                  android:gravity="center_vertical"
    >

        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:padding="10dp"
                   android:src="@drawable/ic_baseline_check_24"
                   android:id="@+id/check4"
                   android:layout_marginRight="16dp"

        />

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textSize="13sp"
                  android:layout_marginEnd="15dp"
                  android:text="위치 정보 이용 약관 동의 (선택)"/>



    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:paddingLeft="20dp"
                                                  android:layout_marginTop="5dp"
                                                  android:gravity="center_vertical"
    >

        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:padding="10dp"
                   android:src="@drawable/ic_baseline_check_24"
                   android:id="@+id/check5"
                   android:layout_marginRight="16dp"

        />

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:orientation="vertical"
        >

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textSize="13sp"
                      android:layout_marginEnd="15dp"
                      android:text="장기 미접속 시에도 계정 유지 (선택)"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textSize="10sp"
                      android:layout_marginEnd="15dp"
                      android:textColor="@color/blurred"
                      android:text="미동의 시 1년 미접속 회원 탈퇴 전환"/>

        </LinearLayout>


    </LinearLayout>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                                               android:text="동의하고 계속하기"
                                               android:paddingTop="12dp"
                                               android:paddingBottom="12dp"
                                               android:id="@+id/next"
                                               android:background="@drawable/disabled_button"
                                               android:gravity="center"
                                               android:textSize="16sp"
                                               android:textColor="@color/white"
                                               android:textStyle="bold"
                                               android:layout_marginBottom="15dp"
                                                style="?android:attr/borderlessButtonStyle"
    />




</LinearLayout>