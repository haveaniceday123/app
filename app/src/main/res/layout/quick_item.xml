<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="center"
              android:id="@+id/quick_item_wrapper"
              android:layout_width="wrap_content"
              android:paddingTop="25dp"
              android:paddingLeft="13dp"
              android:paddingRight="11dp"
              android:paddingBottom="20dp"
              android:layout_gravity="center"
              android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView android:layout_width="50dp" android:layout_height="50dp"
                                       app:cardCornerRadius="100dp"
                                       app:contentPadding="8dp"
                                       app:cardBackgroundColor="#FFfce4ec">

        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:src="@drawable/hotel9"
                   android:id="@+id/quick_item_image"
                   android:alpha="0.8"/>

    </androidx.cardview.widget.CardView>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:gravity="center"
              android:textSize="12sp"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:id="@+id/quick_item_text"
              android:layout_marginTop="5dp"
              android:text="이름없음"
    />

</LinearLayout>