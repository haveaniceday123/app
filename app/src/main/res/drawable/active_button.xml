<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle"
    android:color="#e0e0e0"
>
    <item android:id="@+id/background" android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">

            <gradient
                android:type="linear"
                android:angle="90"
                android:endColor="@color/white"
                android:startColor="@color/white" />

            <corners android:radius="3dp" />

        </shape>
    </item>

    <item android:id="@+id/mask">
        <shape android:shape="rectangle">
            <stroke android:width="2dp"
                    android:color="#1976d2" />

            <corners android:radius="3dp" />

<!--            <padding android:right="3dp"-->
<!--                     android:left="3dp"-->
<!--                     android:top="3dp"-->
<!--                     android:bottom="3dp"/>-->
        </shape>
    </item>

</ripple>