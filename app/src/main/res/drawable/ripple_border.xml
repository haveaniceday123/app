<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle"
        android:color="#e0e0e0"
>
    <item android:id="@+id/background" android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke android:color="@color/black" />

            <gradient
                    android:type="linear"
                    android:angle="90"
                    android:endColor="@color/white"
                    android:startColor="@color/white" />

            <corners android:radius="2dp" />

        </shape>
    </item>



</ripple>